{
  "author": "Narato",
  "classifications": [
    "Narato Libraries",
    "Configuration",
    "API"
  ],
  "name": "Web API template for using Narato Libraries stack",
  "tags": {
    "language": "C#"
  },
  "identity": "Narato.Libraries.WebAPI",
  "shortName": "naratowebapi",
  "sourceName": "Narato.Libraries.POC",
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        "**/*.log",
        ".template.config/*",
        ".vs/**/*",
        ".git/**/*"
      ],
      "modifiers": [
        {
          "condition": "(!EnableExample)",
          "exclude": [
            "**/*Book*.cs",
            "**/*Author*.cs"
          ]
        },
        {
          "condition": "(UseEntityFramework == \"none\")",
          "exclude": [
            "**/Contexts/*"
          ]
        }
      ]
    }
  ],
  "preferNameDirectory": true,
  "symbols": {
    "EnableExample": {
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "false"
    },
    "UseEntityFramework": {
      "type": "parameter",
      "dataType": "choice",
      "defaultValue": "none",
      "choices": [
        {
          "choice": "none",
          "description": "don't use entity framework"
        },
        {
          "choice": "postgres",
          "description": "postgres"
        }
      ]
    },
    "EnableEntityFramework": {
      "type": "computed",
      "value": "(UseEntityFramework != \"none\")"
    },
    "EnableEntityFrameworkPostgres": {
      "type": "computed",
      "value": "(UseEntityFramework == \"postgres\")"
    }
  }
}